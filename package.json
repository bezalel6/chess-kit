{
  "name": "chrome-extension-typescript-starter",
  "version": "1.0.0",
  "description": "chrome-extension-typescript-starter",
  "main": "index.js",
  "scripts": {
    "watch": "webpack --config webpack/webpack.dev.js --watch",
    "watch:chrome": "webpack --config webpack/webpack.dev.js --watch --env browser=chrome",
    "watch:firefox": "webpack --config webpack/webpack.dev.js --watch --env browser=firefox",
    "build": "node scripts/build.js all",
    "build:chrome": "webpack --config webpack/webpack.prod.js --env browser=chrome",
    "build:firefox": "webpack --config webpack/webpack.prod.js --env browser=firefox",
    "package": "node scripts/build.js all",
    "package:chrome": "node scripts/build.js chrome",
    "package:firefox": "node scripts/build.js firefox",
    "clean": "rimraf dist dist-chrome dist-firefox",
    "clean:chrome": "rimraf dist-chrome chrome-extension.zip",
    "clean:firefox": "rimraf dist-firefox firefox-extension.zip",
    "test": "npx jest",
    "style": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chibat/chrome-extension-typescript-starter.git"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/chrome": "0.0.158",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "archiver": "^7.0.1",
    "copy-webpack-plugin": "^9.0.1",
    "glob": "^7.1.6",
    "jest": "^29.5.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2 ",
    "ts-jest": "^29.1.0",
    "ts-loader": "^8.0.0",
    "typescript": "^5.0.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^4.0.0",
    "webpack-merge": "^5.0.0"
  }
}
